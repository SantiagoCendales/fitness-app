@import 'constants';

.menu-container
    padding: 10px 0
    background: primary-menu-color
    display: flex
    flex-direction: column
    flex: 1 100%
    height 100%
    width:150px
    max-width: 240px
    max-height:100vh
    justify-content: space-between;
    background-color: primary-color
    color: white
    position: relative
    box-sizing: border-box


.nav-item
    padding: 12px 15px
    margin: 0 10px
    cursor: pointer
    outline: none
    display: flex
    justify-content: center
    align-items: center
    border-radius: app-border-radius
    h5 
        margin: 10px 0

.nav-item:hover
    background-color: white-10

.nav-item-active
    background-color: white-20
    color:  secondary-color

