@import 'constants'

.lessons-container
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15px;
  grid-area: movies;
  padding: 0.625em 2.5em;
  overflow: auto;

.lesson-container p:nth-of-type(1),
.lesson-container p:nth-of-type(2),
.lesson-container p:nth-of-type(3)
  grid-column-start: 1;
  grid-column-end: -1; /*ESTO SE HACE PARA QUE OCUPE SIEMPRE EL 
                         TOTAL DE COLUMNAS QUE TIENE DISPONIBLE */

.lesson-card
  background-color: primary-color;
  text-align: center
  padding: 20px
  color: white
  border-radius: 10px
  position: relative
  p
    position: absolute
    top: 0
    right: 15px
    font-size: 12px
    font-weight: 200
    color: secondary-color
